{
  "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["esnext"],
      "target": "ESNext",
      "moduleResolution": "node",
      "module": "commonjs",
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "jsx":"react-jsx",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}